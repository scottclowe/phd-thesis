file = {:home/scott/Documents/Mendeley Desktop/2010/Besserve et al. - 2010 - Journal of Computational Neuroscience.pdf:pdf;:home/scott/Documents/Mendeley Desktop/2010/Besserve et al. - 2010 - Journal of Computational Neuroscience(2).pdf:pdf},
