journal = {Journal of Computational Neuroscience},
keywords = {Algorithms,Animals,Bias (Epidemiology),Data Interpretation,Electroencephalography,Entropy,Evoked Potentials,Evoked Potentials: physiology,Extracellular Space,Extracellular Space: physiology,Information Theory,Linear Models,Macaca,Models,Neurological,Photic Stimulation,Statistical,Visual Cortex,Visual Cortex: physiology},
