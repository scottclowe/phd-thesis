doi = {10.1016/j.jphysparis.2011.07.014},
file = {:home/scott/Documents/Mendeley Desktop/2011/Mazzoni et al. - 2011 - Journal of Physiology - Paris.pdf:pdf},
issn = {0928-4257},
journal = {Journal of Physiology - Paris},
keywords = {Gamma band,Integrate and fire,LFP modeling,Mutual information,Natural movies,Neural code,Oscillations,Recurrent networks,Spike timing,Vision},
number = {1--3},
pages = {2--15},
title = {{Cortical dynamics during naturalistic sensory stimulations: Experiments and models}},
