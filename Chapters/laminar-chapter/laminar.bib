file = {:home/scott/Documents/Mendeley Desktop/2011/Szymanski et al. - 2011 - Journal of Neuroscience.pdf:pdf},
journal = {Journal of Neuroscience},
number = {44},
pages = {15787--15801},
title = {{The Laminar and Temporal Structure of Stimulus Information in the Phase of Field Potentials of Auditory Cortex}},
volume = {31},
year = {2011}
}
