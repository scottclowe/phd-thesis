issn = {1095-9572},
journal = {NeuroImage},
keywords = {Adolescent,Adult,Brain,Brain: physiology,Choice Behavior,Choice Behavior: physiology,Decision Making,Decision Making: physiology,Electroencephalography,Humans,Young Adult},
month = {jan},
